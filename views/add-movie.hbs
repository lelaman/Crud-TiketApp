{{> header}}
{{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
        {{message.message}}
    </div>
{{/if}}
{{> navbar}}
<div class="container pt-5 mb-5">
    <form action="/add-movie" method="POST">
        <h1 class="h3 mb-3 fw-bold">Add movie</h1>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" required>
        </div>
        <div class="mb-3">
            <label for="movie_hour" class="form-label">Movie_hour</label>
            <input type="text" class="form-control" name="movie_hour" id="movie_hour" required>
        </div>
       
       
        <div class="mb-3">
            <label for="type_id" class="form-label">Type</label>
            <select class="form-select" aria-label="Default select" name="type_id" id="type_id">
                {{#each type}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>   
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>


{{> footer}}