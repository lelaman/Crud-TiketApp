 <div class="main_content">
<div class="container m-genre fw-bold" style="color:red">
<div class="d-flex flex-row justify-content-between mar-bot" style=" color:red;">
    <h1 class="fw-bold">Ticket.</h1>
    <button class="btn btn-primary text-uppercase btn-sm-lg" style="height: 40px !important;"><a href="/add-ticket" class="text-decoration-none text-light">Add data</a></button>
</div>
<hr>
    <table class="table table-striped table-hover border fw-bold" style="border: 20px solid  rgb(17, 223, 45); box-sizing: border-box;border-radius: 10px;">
    <thead >
        <tr>
        <th scope="col">No</th>
        <th scope="col">Ticket_number</th>
        <th scope="col">date_show</th>
        <th scope="col">Time_show</th>
        <th scope="col">Price</th>
        <th scope="col">Venue</th>
         <th scope="col">Photo</th>
         <th scope="">action</th>
        
        </tr>
    </thead>
    <tbody>
        <tr>
        {{#each ticket}}    
        <th scope="row">{{this.id}}</th>
            <td>{{this.ticket_number}}</td>
            <td>{{this.date_show}}</td>
            <td>{{this.time_show}}</td>
            <td>{{this.price}}</td>
            <td>{{this.venue}}</td>
             <td>{{this.photo}}</td>
            
           
            <td>
                <div class="text-start">
                    <a href="/edit-ticket/{{this.id}}">
                        Edit
                    </a> | 
                    <a href="/delete-ticket/{{this.id}}">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
